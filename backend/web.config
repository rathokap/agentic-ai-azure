<?xml version="1.0" encoding="utf-8"?>
<!--
  This file configures the Python HttpPlatformHandler for Azure App Service on Windows.
  For Linux App Service, use startup.sh or startup.txt instead.
-->
<configuration>
  <system.webServer>
    <handlers>
      <add name="PythonHandler" 
           path="*" 
           verb="*" 
           modules="httpPlatformHandler" 
           resourceType="Unspecified"/>
    </handlers>
    
    <httpPlatform processPath="D:\home\Python311\python.exe"
                  arguments="-m gunicorn app:app --worker-class uvicorn.workers.UvicornWorker --workers 2 --bind 0.0.0.0:%HTTP_PLATFORM_PORT% --timeout 120 --log-level info"
                  stdoutLogEnabled="true"
                  stdoutLogFile="D:\home\LogFiles\python_output.log"
                  startupTimeLimit="120"
                  startupRetryCount="3">
      <environmentVariables>
        <environmentVariable name="PYTHONPATH" value="D:\home\site\wwwroot" />
      </environmentVariables>
    </httpPlatform>
    
    <!-- Redirect all requests to the Python app -->
    <rewrite>
      <rules>
        <rule name="StaticContent">
          <action type="Rewrite" url="static{REQUEST_URI}"/>
        </rule>
      </rules>
    </rewrite>
    
    <!-- Configure static content caching -->
    <staticContent>
      <mimeMap fileExtension=".json" mimeType="application/json" />
      <mimeMap fileExtension=".woff" mimeType="application/font-woff" />
      <mimeMap fileExtension=".woff2" mimeType="application/font-woff2" />
    </staticContent>
    
    <!-- Security headers -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="SAMEORIGIN" />
        <add name="X-XSS-Protection" value="1; mode=block" />
      </customHeaders>
    </httpProtocol>
    
  </system.webServer>
</configuration>
