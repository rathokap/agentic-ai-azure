# Azure App Service Configuration for Python

# Enable build during deployment
SCM_DO_BUILD_DURING_DEPLOYMENT=true

# Enable Oryx build (Azure's build system)
ENABLE_ORYX_BUILD=true

# Specify startup command
STARTUP_COMMAND=python -m uvicorn app:app --host 0.0.0.0 --port 8000

# Python version
PYTHON_VERSION=3.11

# Enable detailed logging
LOGGING_LEVEL=INFO
